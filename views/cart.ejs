<%include partials/header %>
<div class="container">
	
	<h1>Hi, <%= user.username%></h1>


	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<%var price = 0;%>
    <%var index = 0;%>
      <%user.cart.forEach(function(music){%>
      	<% if(music.avaliable){price = Math.round((price + music.price) * 1e12) / 1e12} %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= music.cover%>">
            <div class="caption">
              <h4><%= music.musicname%></h4>
              <% if(!music.avaliable){ %>
              <h4>Not Avaliable</h4>
              <%}%>
            </div>
            <p>
              <a href="/music/<%= music._id %>" class="btn btn-primary">More info</a>
              <a href="/drop/<%= index %>" class="btn btn-warning">Delete</a>
            </p>
          </div>
        </div>
        <% index ++; %>
      <%});%>
    </div>

	<h2>Total price is: <%= price %></h2>
  <a href="/checkout" class="btn btn-primary">Check out</a>
</div>

<%include partials/footer %>